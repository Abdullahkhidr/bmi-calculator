<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".BMIResultActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_screen"
        android:text="bmi calculator"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="22dp"
        android:textStyle="bold" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_card"
        android:text="Your Result"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_screen"
        android:background="@drawable/card_style"
        android:orientation="vertical"
        android:padding="@dimen/padding_screen">

        <TextView
            android:id="@+id/case_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:textAlignment="center"
            android:textColor="#20D728"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bmi_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22.1"
            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_result"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginVertical="20dp"
            android:src="@drawable/female_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal BMI range:"
            android:textAlignment="center"
            android:textColor="@color/hint_color"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="18.5 - 25 kg/m2"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/msg_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="You have a normal body weight. Good job!"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="21dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/re_calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:padding="@dimen/padding_screen"
        android:text="RE-Calculate your bmi"
        android:textSize="18dp" />
</LinearLayout>
